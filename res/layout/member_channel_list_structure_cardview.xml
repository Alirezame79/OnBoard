<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_list_structure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_square_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationZ="25dp">

        <ImageView
            android:id="@+id/channel_image_topic_member_str"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="@id/channel_list_structure"
            app:layout_constraintTop_toTopOf="@id/channel_list_structure"
            app:layout_constraintBottom_toBottomOf="@id/channel_list_structure"
            android:layout_margin="5dp" />

        <LinearLayout
            android:id="@+id/channel_txt_view_container_str"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/channel_image_topic_member_str"
            app:layout_constraintTop_toTopOf="@id/channel_list_structure"
            app:layout_constraintRight_toRightOf="@id/channel_list_structure"
            app:layout_constraintBottom_toBottomOf="@id/channel_list_structure">

            <TextView
                android:id="@+id/channel_name_txt_view_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel_name_topic"
                android:textColor="@color/palette_black"
                android:fontFamily="@font/channe"
                android:textSize="11pt"
                android:layout_marginHorizontal="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/channel_member_counter_txt_view_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/channel_member_counter_topic"
                android:textColor="@color/palette_black"
                android:textSize="7pt"
                android:layout_marginHorizontal="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>